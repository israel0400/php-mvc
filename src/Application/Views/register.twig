{% extends "layout.twig" %}

{% block messages %}
    {% if result is defined %}
        {% if result == false %}
            <div class="alert alert-danger">
                Please check the information, one or more values are empty.
            </div>
        {% endif %}
    {% endif %}
{% endblock %}

{% block content %}

    <div class="col-12 mt-3">
        <h3 class="text-center">Registrate</h3>
        <hr>
    </div>
    <div class="col-12">
        <form method="post">

            <div class="form-group">
                <label for="email">Email</label>
                <input class="form-control" type="email" name="email" id="email" value="{{ post.email }}">
            </div>
            <div class="form-group">
                <label for="username">Username</label>
                <input class="form-control" type="text" name="username" id="username" value="{{ post.username }}">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input class="form-control" type="password" name="password" id="password" value="{{ post.password }}">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Registrarme</button>
            </div>
        
        </form>
    </div>

{% endblock %}