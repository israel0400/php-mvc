{% extends "layout.twig" %}
{% block content %}
    <h1>Lista de usuarios</h1>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Email</th>
                <th>Register since</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.created|date("m/d/Y H:i:s") }}</td>
                    <td><button type="button" class="btn btn-warning">Delete</button></td>
                </tr>
            {% endfor %} 
        </tbody>
    </table>
{% endblock %}