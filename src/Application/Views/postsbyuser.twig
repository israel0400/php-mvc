{% extends "layout.twig" %}

{% block content %}
    <div class="col mt-3">
        <h3 class="text-center">Posts del usuario {{ post.user_id }}</h1>
        <table class="table table-sm table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Title</th>
                    <th>Body</th>
                    <th>Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for post in posts %}
                    <tr>
                        <td>{{ post.title }}</td>
                        <td>{{ post.body }}</td>
                        <td>{{ post.created|date("m/d/Y H:i:s") }}</td>
                        <td>
                            <button class="btn btn-danger btn-sm" type="button" id="delete{{post.id}}">Eliminar</button>
                            <button class="btn btn-primary btn-sm" type="button" id="edit{{post.id}}">Editar</button>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}